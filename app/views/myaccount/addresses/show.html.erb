<div class='span9 columns'>
  <h3> Address </h3>
  <p>
    <%= render :partial => '/shared/compact_address', 
    	:locals => { :shopping_address => @address } %>
  </p>
  <p>
    <%= link_to "Edit", edit_myaccount_address_path(@address), :class => 'btn' %> |
    <%= link_to "Destroy", myaccount_address_path(@address), :data => { :confirm => 'Are you sure?'}, :method => :delete, :class => 'btn' %> |
    <%= link_to "View All", myaccount_addresses_path, :class => 'btn' %>
  </p>
</div>
