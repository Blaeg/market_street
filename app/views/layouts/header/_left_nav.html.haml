%ul.nav
  %li= link_to fa_icon("home", text: 'Stores'), catalog_products_path
  %li= link_to fa_icon("shopping-cart", text: 'Products'), catalog_products_path
  %li= link_to fa_icon("tags", text: 'Offers'), '#'
  %li.dropdown
    = link_to "#", data: { toggle: 'dropdown'}, class: 'dropdown-toggle' do
      =fa_icon "list-ul", text: "Categories"
      %b.caret
    %ul.dropdown-menu
      %li= link_to 'New Arrival', catalog_products_path
      %li.divider
      - product_types.each do |pt_tab|
        %li= link_to_unless_current pt_tab.name.capitalize, catalog_products_path(:product_type_id => pt_tab.id)
      %li.divider
      %li= link_to 'Sell', catalog_products_path