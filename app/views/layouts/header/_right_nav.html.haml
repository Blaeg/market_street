%ul.nav.pull-right
  - if session_cart.shopping_cart_items.size > 0
    %li.dropdown
      = link_to "#", data: { toggle: 'dropdown'}, class: 'dropdown-toggle' do
        =fa_icon "caret-down", text: "Shopping Cart (#{session_cart.shopping_cart_items.size})", class: "pull-right"
      %ul.dropdown-menu
        - session_cart.shopping_cart_items.each do |item|
          %li= link_to item.variant.name, shopping_cart_items_path, :id => 'cart_items_buttons'
                         
  - if current_user
    %li.dropdown
      = link_to "#", data: { toggle: 'dropdown'}, class: 'dropdown-toggle' do
        =fa_icon "caret-down", text: current_user.first_name, class: "pull-right"
      %ul.dropdown-menu            
        -if current_user.admin?
          %li= link_to 'Admin', admin_users_path
          %li.divider
        %li= link_to 'My Account', myaccount_overview_path          
        %li= link_to 'My Orders', myaccount_orders_path
        %li= link_to 'My Stores', myaccount_orders_path
        %li= link_to 'My Activities', myaccount_orders_path
        %li.divider
        %li= link_to 'Contact Us', about_home_path
        %li.divider
        %li= link_to 'Log Out', logout_path, :method => 'DELETE'
  - else
    %li= link_to 'Login', login_path 


