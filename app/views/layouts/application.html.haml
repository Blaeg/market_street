!!!
%html{:lang => "en"}
%head>
  %meta(charset="utf-8")
  %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
  %meta(name="viewport" content="width=device-width, initial-scale=1.0")
  %title= content_for?(:title) ? "#{site_name}: #{yield(:title)}" : site_name
  %link{:href => "/assets/favicon.ico", :rel => "shortcut icon"}
  = stylesheet_link_tag layout_theme, :media => "all"
  = csrf_meta_tag 
  = yield(:page_stylesheet) if content_for?(:page_stylesheet)
  = render 'shared/metadata'
%body
  = render 'layouts/header/header'
  .container
    = render 'layouts/header/alert_notice'
    = render_breadcrumbs 
    = yield
    = render 'layouts/footer/footer'
  = render 'layouts/footer/google_analytics' unless @disable_ga
  = javascript_include_tag layout_theme
  = yield :page_javascript
= yield :below_body