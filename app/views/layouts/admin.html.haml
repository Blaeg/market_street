!!!
%html{:lang => "en"}
%head>
  %title= content_for?(:title) ? "#{site_name}: #{yield(:title)}" : site_name
  %link{:href => "/assets/favicon.ico", :rel => "shortcut icon"}
  = stylesheet_link_tag "bootstrap-application-admin", :media => "all"
  = csrf_meta_tag 
  = yield :head

  %body
    = render 'layouts/header/admin_header'
    .container-fluid
      .row-fluid
        = render 'shared/flash_message' if notice || alert            
        .breadcrumb= render_breadcrumbs
        = yield
    = javascript_include_tag 'bootstrap-application-admin'
    = yield :bottom
  = yield(:below_body)
    