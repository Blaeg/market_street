<div id="order-confirmation">
  <div class="row">
    <div class='eight columns'>
      <div class="top-box background-gray red-border-left">
        <h4 class="bold">Thank You, Your order has been placed</h4>
        <div class='row'>
          <ul class='col-md-12 columns'>
            <li>
              An email confirmation has been sent to you
            </li>
            <li>
              Order Number: <span class="bold black"><%= @order.number %></span>
            </li>
          </ul>
        </div>
      </div>
      <hr style='color:#aac;'/>
      <div class=''>
        <% @order.order_items.each_with_index do |item, i| %>
          <div class='row clearfix'>
            <div class='four column'>
              <%= image_tag item.variant.product.featured_image(:medium) %>
            </div>
            <div class='eight column'>
              <h4 class='red bold'>
                Item #<%= i + 1 %>: <%= raw item.variant.product_name %>
              </h4>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
