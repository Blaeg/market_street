<h1>Pick a Shipping Method</h1>

<div class='clearfix'>
  <%= form_tag(shopping_shipping_method_path(session_order.id), html: {class: 'custom'}, method: :put) do -%>
  <% @order_items.each do |item| %>
  <% binding.pry %>
  <div class='column float-left span10 line_items_blue last'>
    <div class='span9 clearfix panel'>
      <div class='span6 columns'>
        <%= image_tag(item.variant.product.featured_image(:mini)) %>
        <%= item.variant.product.name %> Quantity: <%= item.quantity %>
      </div>
      <div class='span5 columns last' style='text-align:left;'>
        <%= raw item.variant.display_property_details %>
      </div>
    </div>          
  </div>
  <% end %>
  <ul class='span10'>
    <% @order_items.first.shipping_rate_options(session_order.sub_total).each do |rate| %>
    <li><%= radio_button_tag "shipping_category[#{shipping_category_id}]", rate.id %> <%= rate.name_rate_min %></li>
    <% end %>
  </ul>
  <div class='span10 clearfix offset-by-two'>
    <%= submit_tag 'continue', :class => 'btn' %>
  </div>

  <% end %>
</div>
