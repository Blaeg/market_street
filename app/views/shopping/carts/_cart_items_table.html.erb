<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Product Name</th>
      <th>Price</th>
      <th>Quantity</th>        
      <th>Total</th>            
    </tr>
  </thead>
  <tbody>
    <% @cart.cart_items.each do |item| %>
      <%= render :partial => 'cart_item', :locals => {:item => item} %>      
    <% end %>     
  </tbody>
</table>      