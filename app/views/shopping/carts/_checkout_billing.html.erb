<div class="span6">
  <legend>Payment Method</legend>    
  <input type="radio" value="option1" name="payment1"> Pay in person<br><br>
  <input type="radio" value="option2" name="payment1"> Paypal<br><br>
  <input type="radio" value="option2" name="payment1"> Google checkout  
</div>                    

<div class="span5">
    <legend>Billing Address </legend>
    <div class="control-group">
        <label class="control-label">Address 1</label>
        <div class="controls docs-input-sizes">
            <input type="text" placeholder="" class="span4">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Address 2</label>
        <div class="controls docs-input-sizes">
            <input type="text" placeholder="" class="span4">
        </div>
    </div>            
    <div class="control-group">
        <label class="control-label">City</label>
        <div class="controls docs-input-sizes">
            <input type="text" placeholder="" class="span4">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">ZIP</label>
        <div class="controls docs-input-sizes">
            <input type="text" placeholder="" class="span4">
        </div>
    </div>            
    <div class="control-group">
        <label class="control-label">Country</label>
        <div class="controls docs-input-sizes">
            <select class="span4">
                <option>United Kingdom</option>
                <option>United States</option>
            </select>
        </div>
    </div>
</div>
<%= link_to 'Continue', shopping_cart_checkout_path, class: 'span2 btn btn-primary btn-large pull-right' %>