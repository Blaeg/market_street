<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Image</th>
      <th>Product Name</th>
      <th>Unit Price</th>
      <th>Quantity</th>        
      <th>Total</th>            
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |item| %>
      <%= cart_form.fields_for :cart_items, item do |cart_items_form| %>
        <%= render :partial => 'cart_item', :locals => {:cart_items_form => cart_items_form, :item => item} %>
      <% end %>
    <% end %>   
    <tr>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>
        <strong><%= number_to_currency @cart_items.map(&:total).sum %></strong>
      </td>
    </tr>     
  </tbody>
</table>      