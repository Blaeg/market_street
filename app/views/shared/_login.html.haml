#login.well
  %h3 Welcome Back
  = form_for @user_session, :as => :user_session, :url => customer_user_sessions_path(@user_session) do |form|
    .login-fields
      .field.col-md-8
        = form.label :email, 'Email'
        = form.email_field :email, :placeholder => 'Email', :class => 'username-field form-control'      
      .field.col-md-8
        = form.label :email, 'Password'
        = form.password_field :password, :placeholder => 'Password', :class => 'password-field form-control'
      .clearfix
    .col-md-8
      = form.submit "Sign In", :class => 'btn btn-primary'
      &nbsp;
      = link_to 'forgot password?', new_customer_password_reset_path()
    %br      
    %br      
    .col-md-12
      .twitter=link_to 'Login with Twitter', '#'
      &nbsp;
      .fb=link_to 'Login with Facebook', '#'
      
  .clearfix
            