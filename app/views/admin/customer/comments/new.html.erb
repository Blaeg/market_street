<h1> New Comment </h1>

<%= customer.name %>
<%= form_for @comment, :url => admin_customer_user_comments_path(customer, @comment) do |f| %>
  <%=  render :partial => 'form', :locals => {:f => f} %>
  <div class="actions"><%= f.submit 'Create' , :class => 'btn' %></div>
<% end %>

<%= link_to "Back to List", admin_customer_user_comments_path(customer), 
	:class => 'btn' %>
