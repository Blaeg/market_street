<% content_for :sidemenu do %>
  <div class="span2">
    <%= search_form_for @q, url: admin_fulfillment_order_return_authorizations_path do |f| %>
      <%= f.label :number_cont %>
      <%= f.text_field :number_cont, class: 'span12'%>
      <%= f.label :state_eq %>
      <%= f.text_field :state_eq, class: 'span12' %>
      <%= f.submit(:class => "btn btn-primary") %>       
    <% end %>    
    <%= link_to 'Back to Order', admin_history_order_path(@order), class: 'btn' %>
  </div>
<% end %>

<div class="span9">
  
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th><%= sortable "number" %></th>
        <th><%= sortable "amount" %></th>
        <th><%= sortable "User" %></th>
        <th><%=  "order_number" %></th>
        <th>Status</th>
      </tr>
    </thead>
    <% @return_authorizations.each do |return_authorization| %>
      <tr>
        <td><%= link_to return_authorization.number, edit_admin_fulfillment_order_return_authorization_path(@order, return_authorization) %></td>
        <td><%= return_authorization.amount %></td>
        <td><%= return_authorization.user_name %></td>
        <td><%= return_authorization.order_number %></td>
        <td><%= return_authorization.state %></td>
      </tr>
    <% end %>
  </table>
</div>