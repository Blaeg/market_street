<%= link_to 'New Account', new_admin_config_account_path, :class => 'btn' %>

<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th class='column1_header'>Account type</th>
    <th>Monthly charge</th>
    <th>Active</th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <% @accounts.each do |account| %>
    <tr>
      <td><%= link_to account.account_type, edit_admin_config_account_path(account) %></td>
      <td><%= account.monthly_charge %></td>
      <td><%= account.active %></td>
      <td>
        <%= link_to "Delete", admin_config_account_path(account), :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>
