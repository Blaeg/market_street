<% content_for :sidemenu do %>
  <div class="span2">
    <%= search_form_for @q, url: admin_document_invoices_path do |f| %>
      <%= f.label :order_id_cont %>
      <%= f.text_field :order_id_eq, class: 'span12'%>
      <%= f.submit(:class => "btn btn-primary") %>       
    <% end %>    
  </div>
<% end %>

<div class="span9">
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Order ID</th>
      <th class='column1_header'>Amount</th>
      <th>State</th>
      <th>Order</th>
      <th>Type</th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <% for invoice in @invoices %>
      <tr>
        <td><%= invoice.order.id %></td>
        <td><%= invoice.amount %></td>
        <td><%= invoice.state %></td>
        <td><%= invoice.order.number %></td>
        <td><%= invoice.invoice_type %></td>
        <td><%= link_to "Show", admin_document_invoice_path(invoice) %></td>
        <td>
          <% if invoice.authorized? %>
            <%= link_to "Cancel", admin_document_invoice_path(invoice), :confirm => 'Are you sure?', :method => :delete %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= paginate @invoices %>
</div>