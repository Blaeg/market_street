<h1> Edit Sale </h1>

<%= form_for @sale, :url => [:admin, :offer, @sale] do |f| %>
  <%=  render :partial => 'form', :locals => {:f => f} %>
  <div class="actions"><%= f.submit 'Update' , :class => 'btn btn-primary' %></div>
<% end %>

<p>
  <%= link_to "Show", [:admin, :offer, @sale], :class => 'btn btn-primary' %> |
  <%= link_to "View All", admin_offer_sales_path, :class => 'btn btn-primary' %>
</p>
