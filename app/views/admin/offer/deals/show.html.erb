<h3>Deal</h3>

<ul>
  <li>
    <label>Buy Quantity:</label>
    <%= @deal.buy_quantity %>
  </li>
  <li>
    <label>Get Percentage:</label>
    <%= @deal.get_percentage %>
  </li>
  <li>
    <label>Deal Type:</label>
    <%= @deal.deal_type %>
  </li>
  <li>
    <label>Product Type:</label>
    <%= @deal.product_type.name %>
  </li>
  <li>
    <label>Get Amount:</label>
    <%= @deal.get_amount %>
  </li>
  <li>
    <label>Deleted At:</label>
    <%= @deal.deleted_at %>
  </li>
</ul>
<p>
  <%= link_to "Destroy", [:admin, :offer, @deal], :data => {:confirm => 'Are you sure?'}, :method => :delete, :class => 'btn btn-primary' %> |
  <%= link_to "View All", admin_offer_deals_path, :class => 'btn btn-primary' %>
</p>
