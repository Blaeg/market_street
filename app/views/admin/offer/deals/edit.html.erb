<h3>Edit Deal</h3>

<%= form_for @deal, :url => [:admin, :offer, @deal] do |f| %>
  <%=  render :partial => 'form', :locals => {:f => f} %>
  <div class="actions"><%= f.submit 'Update' , :class => 'btn btn-primary' %></div>
<% end %>

<p>
  <%= link_to "Show", [:admin, :offer, @deal], :class => 'btn btn-primary' %> |
  <%= link_to "View All", admin_offer_deals_path, :class => 'btn btn-primary' %>
</p>
